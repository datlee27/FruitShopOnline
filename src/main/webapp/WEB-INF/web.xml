<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <!-- Fruit Servlet -->
    <servlet>
        <servlet-name>Fruit</servlet-name>
        <servlet-class>controller.Fruit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteControl</servlet-name>
        <servlet-class>controller.DeleteControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddControl</servlet-name>
        <servlet-class>controller.AddControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadProduct</servlet-name>
        <servlet-class>controller.UploadProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditControl</servlet-name>
        <servlet-class>controller.EditControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadEditProduct</servlet-name>
        <servlet-class>controller.LoadEditProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartControl</servlet-name>
        <servlet-class>controller.CartControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckoutControl</servlet-name>
        <servlet-class>controller.CheckoutControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCartControl</servlet-name>
        <servlet-class>controller.UpdateCartControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountManager</servlet-name>
        <servlet-class>controller.AccountManager</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Fruit</servlet-name>
        <url-pattern>/fruit</url-pattern>
    </servlet-mapping>
    <!-- LoginServlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <!-- ProductManager -->
    <servlet>
        <servlet-name>ProductManager</servlet-name>
        <servlet-class>controller.ProductManager</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductManager</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteControl</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddControl</servlet-name>
        <url-pattern>/addproduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadProduct</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditControl</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadEditProduct</servlet-name>
        <url-pattern>/loadproduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartControl</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckoutControl</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <!-- Gọi các file này đầu tiên khi chạy web -->
        <welcome-file>upload</welcome-file>
    </welcome-file-list>
    <!-- Xử lý lỗi toàn cục -->
    <error-page>
        <exception-type>java.lang.ArithmeticException</exception-type>
        <location>/errorPage.jsp</location>
    </error-page>
    <!--    <error-page>
        <error-code>404</error-code>
        <location>/notFound.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/notFound.jsp</location>
    </error-page>
 -->
    <servlet-mapping>
        <servlet-name>UpdateCartControl</servlet-name>
        <url-pattern>/updateCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountManager</servlet-name>
        <url-pattern>/account</url-pattern>
    </servlet-mapping>
    <listener>
    <listener-class>listener.OnlineUserListener</listener-class>
    </listener>
    

    
   <filter>
    <filter-name>LogFilter</filter-name>
    <filter-class>filter.LogFilter</filter-class>
</filter>
<filter-mapping>
    <filter-name>LogFilter</filter-name>
    <url-pattern>/*</url-pattern> <!-- Áp dụng cho toàn bộ project -->
</filter-mapping>
    <session-config>
        <session-timeout>
            10
        </session-timeout>
    </session-config>
</web-app>
